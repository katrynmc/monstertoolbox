  <body>

      <%= yield %>
      <div class="light">
        <div class="row ">
          <div class="small-12 columns">
            <div class="by-line">
              Created by <%= link_to "Katryn McIntosh", "http://linkedin.com/in/katrynmcintosh" %> | <strong>GA Boston </strong>Summer 2014<br>
              <i class="fa fa-code-fork"></i> <%= link_to 'Github Repo', "http://github.com/testkitschen/monstertoolbox" %>
            </div> <!-- End by-line -->
          </div> <!-- End 12 columns -->
        </div> <!-- End row -->
      </div> <!-- End light -->
